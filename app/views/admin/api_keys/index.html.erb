<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">OpenAI API Keys</h1>
    <%= link_to "Add New API Key", new_admin_api_key_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
  </div>

  <% if @api_keys.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @api_keys.each do |api_key| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= api_key.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= api_key.created_at.strftime('%B %d, %Y') %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                <%= link_to "Edit", edit_admin_api_key_path(api_key), class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "Delete", admin_api_key_path(api_key), method: :delete, 
                    confirm: "Are you sure?", class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-6 text-center">
      <h3 class="text-lg font-medium text-gray-900 mb-2">No API Keys</h3>
      <p class="text-gray-500 mb-4">Add an OpenAI API key to enable AI-powered vulnerability analysis.</p>
      <%= link_to "Add API Key", new_admin_api_key_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
