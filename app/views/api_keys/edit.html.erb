<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h1 class="text-2xl font-bold mb-6">Update API Key</h1>
      
      <%= form_with(model: @api_key, url: api_key_path, method: :patch, local: true) do |form| %>
        <% if @api_key.errors.any? %>
          <div class="mb-4 bg-red-50 border border-red-200 rounded-lg p-4">
            <h3 class="font-semibold text-red-900 mb-2">Please fix the following errors:</h3>
            <ul class="list-disc list-inside text-red-700">
              <% @api_key.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="mb-6">
          <div class="mb-4">
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, 
                                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>
          
          <div class="mb-4">
            <%= form.label :api_token, "New API Key", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.password_field :api_token,
                                    placeholder: "sk-... or sk-or-... (leave blank to keep current key)",
                                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            <p class="mt-1 text-sm text-gray-600">
              Leave blank to keep your current API key. Enter a new key to replace it.
              <% if @api_key.provider.present? %>
                <br>Current provider: <strong><%= @api_key.provider.upcase %></strong>
              <% end %>
            </p>
          </div>
        </div>
        
        <div class="flex space-x-4">
          <%= form.submit "Update API Key", 
                          class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition cursor-pointer" %>
          <%= link_to "Cancel", api_key_path, 
                      class: "px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400 transition" %>
        </div>
      <% end %>
    </div>
    
    <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <h3 class="font-semibold text-yellow-900 mb-2">Important</h3>
      <p class="text-yellow-800 text-sm">
        Updating your API key will affect all future vulnerability scans. Make sure your new key 
        is valid and has sufficient credits for API usage.
      </p>
    </div>
  </div>
</div>
